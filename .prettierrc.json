{
  "trailingComma": "es5",
  "semi": true,
  "singleQuote": false,
  "printWidth": 120,
  "bracketSpacing": true,
  "tabWidth": 4,
  "overrides": [
    {
      "files": ["*.ts", "*.js"],
      "options": {
        "singleQuote": true
      }
    },
    {
      "files": ["*.json"],
      "options": {
        "parser": "json",
        "tabWidth": 2
      }
    },
    {
      "files": ["*.yml"],
      "options": {
        "parser": "yaml",
        "tabWidth": 2
      }
    }
  ]
}
